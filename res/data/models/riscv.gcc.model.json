{
    "name": "RISC-V GCC",
    "id": "GCC",
    "toolPrefix": "riscv-none-embed-",
    "useUnixPath": true,
    "version": {
        "args": "--version",
        "matcher": "\\((?<name>.*?)\\) (?<version>\\d+\\.\\d+\\.\\d+)"
    },
    "global": {
        "abi": {
            "type": "value",
            "command": "-mabi=",
            "group": [
                "c",
                "cpp",
                "asm",
                "linker"
            ],
            "location": "first"
        },
        "code-model": {
            "type": "value",
            "command": "-mcmodel=",
            "group": [
                "c",
                "cpp",
                "asm",
                "linker"
            ],
            "location": "first"
        },
        "arch": {
            "type": "value",
            "command": "-march=",
            "group": [
                "c",
                "cpp",
                "asm",
                "linker"
            ],
            "location": "first"
        },
        "optimization": {
            "type": "selectable",
            "command": {
                "false": "",
                "level-0": "-O0",
                "level-1": "-O1",
                "level-2": "-O2",
                "level-3": "-O3",
                "level-size": "-Os",
                "level-size-Oz": "-Oz",
                "level-fast": "-Ofast",
                "level-debug": "-Og"
            },
            "group": [
                "c",
                "cpp"
            ]
        },
        "optimization-lto": {
            "type": "selectable",
            "command": {
                "true": "-flto",
                "false": ""
            },
            "group": [
                "c",
                "cpp",
                "linker"
            ]
        },
        "signed-char": {
            "type": "selectable",
            "command": {
                "true": "-fsigned-char",
                "false": "-funsigned-char"
            },
            "group": [
                "c",
                "cpp"
            ]
        },
        "no-rtti": {
            "type": "selectable",
            "command": {
                "true": "-fno-rtti",
                "false": ""
            },
            "group": [
                "c",
                "cpp"
            ]
        },
        "no-exceptions": {
            "type": "selectable",
            "command": {
                "true": "-fno-exceptions",
                "false": ""
            },
            "group": [
                "c",
                "cpp"
            ]
        },
        "no-use-cxa-atexit": {
            "type": "selectable",
            "command": {
                "true": "-fno-use-cxa-atexit",
                "false": ""
            },
            "group": [
                "c",
                "cpp"
            ]
        },
        "no-threadsafe-statics": {
            "type": "selectable",
            "command": {
                "true": "-fno-threadsafe-statics",
                "false": ""
            },
            "group": [
                "c",
                "cpp"
            ]
        },
        "turn-warning-into-errors": {
            "type": "selectable",
            "command": {
                "true": "-Werror",
                "false": ""
            },
            "group": [
                "c",
                "cpp"
            ]
        },
        "warnings": {
            "type": "selectable",
            "command": {
                "false": "",
                "no-warnings": "-w",
                "all-warnings": "-Wall"
            },
            "group": [
                "c",
                "cpp"
            ]
        },
        "output-debug-info": {
            "type": "selectable",
            "command": {
                "enable": "-g",
                "disable": "",
                "dwarf-2": "-g -gdwarf-2",
                "dwarf-3": "-g -gdwarf-3",
                "false": ""
            },
            "group": [
                "c",
                "cpp",
                "asm"
            ]
        },
        "one-elf-section-per-function": {
            "type": "selectable",
            "command": {
                "true": "-ffunction-sections",
                "false": ""
            },
            "group": [
                "c",
                "cpp"
            ]
        },
        "one-elf-section-per-data": {
            "type": "selectable",
            "command": {
                "true": "-fdata-sections",
                "false": ""
            },
            "group": [
                "c",
                "cpp"
            ]
        },
        "misc-control": {
            "type": "list",
            "command": "",
            "group": [
                "c",
                "cpp",
                "asm",
                "linker"
            ]
        },
        "C_FLAGS": {
            "type": "list",
            "command": "",
            "group": [
                "c"
            ]
        },
        "CXX_FLAGS": {
            "type": "list",
            "command": "",
            "group": [
                "cpp"
            ]
        },
        "ASM_FLAGS": {
            "type": "list",
            "command": "",
            "group": [
                "asm"
            ]
        },
        "LD_FLAGS": {
            "type": "list",
            "command": "",
            "group": [
                "linker"
            ]
        }
    },
    "groups": {
        "c": {
            "$path": "bin/${toolPrefix}gcc",
            "$includes": {
                "body": "-I${value}"
            },
            "$defines": {
                "body": "-D\"${key}=${value}\"",
                "body_noval": "-D\"${key}\""
            },
            "$invoke": {
                "useFile": true,
                "body": "@${value}"
            },
            "$output": "-o ${out} -MMD ${in}",
            "$default": [
                "-c",
                "-xc"
            ],
            "$language-c": {
                "type": "value",
                "command": "-std="
            }
        },
        "cpp": {
            "$path": "bin/${toolPrefix}g++",
            "$includes": {
                "body": "-I${value}"
            },
            "$defines": {
                "body": "-D\"${key}=${value}\"",
                "body_noval": "-D\"${key}\""
            },
            "$invoke": {
                "useFile": true,
                "body": "@${value}"
            },
            "$output": "-o ${out} -MMD ${in}",
            "$default": [
                "-c"
            ],
            "$language-cpp": {
                "type": "value",
                "command": "-std="
            }
        },
        "asm": {
            "$path": "bin/${toolPrefix}gcc",
            "$includes": {
                "body": "-I${value}"
            },
            "$output": "-o ${out} -MMD ${in}",
            "$invoke": {
                "useFile": true,
                "body": "@${value}"
            },
            "$default": [
                "-c",
                "-x assembler-with-cpp"
            ],
            "defines": {
                "type": "list",
                "command": "-D"
            }
        },
        "linker": {
            "$path": "bin/${toolPrefix}${toolName}",
            "$defToolName": "gcc",
            "$libs": {
                "body": "-L${value}"
            },
            "$invoke": {
                "useFile": true,
                "body": "@${value}"
            },
            "$default": [],
            "$output": "-o ${out} ${in} ${lib_flags}",
            "$outputSuffix": ".elf",
            "$linkMap": {
                "type": "value",
                "command": "-Wl,-Map=${mapPath}"
            },
            "$LIB_FLAGS": {
                "type": "list",
                "command": ""
            },
            "linker-script": {
                "type": "list",
                "command": "-T "
            },
            "remove-unused-input-sections": {
                "type": "selectable",
                "command": {
                    "true": "-Wl,--gc-sections",
                    "false": ""
                }
            },
            "not-print-mem-usage": {
                "type": "selectable",
                "command": {
                    "true": "",
                    "false": "-Wl,--print-memory-usage"
                }
            },
            "$outputBin": [
                {
                    "name": "output hex file",
                    "toolPath": "bin/${toolPrefix}objcopy",
                    "outputSuffix": ".hex",
                    "command": "-O ihex ${linkerOutput} ${output}"
                },
                {
                    "name": "output bin file",
                    "toolPath": "bin/${toolPrefix}objcopy",
                    "outputSuffix": ".bin",
                    "command": "-O binary ${linkerOutput} ${output}"
                }
            ]
        },
        "linker-lib": {
            "$path": "bin/${toolPrefix}ar",
            "$invoke": {
                "useFile": true,
                "body": "@${value}"
            },
            "$output": "-rcv ${out} ${in}",
            "$outputSuffix": ".a"
        }
    }
}